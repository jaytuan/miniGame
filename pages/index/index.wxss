/**index.wxss**/
.userinfo {
}

.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  position:relative;
  top:9px;
}

.userinfo-nickname {
  position:relative;
  right:5px;
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}
.container .top-row{
	height:50px;
	background:#cf5563;
	position:relative;
	line-height:50px;
}
.container .top-row .use-time{
	position:absolute;
	left:10px;
	color:#FFF;
}
.container .top-row .user-infor{
	position:absolute;
	right:10px;
}
.container .gobang-cont{
	display:grid;
	grid-template-columns:33%;
	grid-template-rows:33%;
	height:360px;
	width:360px;
	margin:20px auto;
}
.container .gobang-cont .item{
	border-left:solid 2px #333;
	border-top:solid 2px #333;
	background:#ccc;
}
.item-1{
    grid-column: 1;
    grid-row: 1;
}
.item-2{
    grid-column: 2;
    grid-row: 1;
}
.item-3{
    grid-column: 3;
    grid-row: 1;
    border-right:solid 2px #333;
}
.item-4{
    grid-column: 1;
    grid-row: 2;
}
.item-5{
    grid-column: 2;
    grid-row: 2;
}
.item-6{
    grid-column: 3;
    grid-row: 2;
    border-right:solid 2px #333;
}
.item-7{
    grid-column: 1;
    grid-row: 3;
    border-bottom:solid 2px #333;
}
.item-8{
    border-bottom:solid 2px #333;
    grid-column: 2;
    grid-row: 3;
}
.item-9{
    border-bottom:solid 2px #333;
    border-right:solid 2px #333;
    grid-column: 3;
    grid-row: 3;
}
.display-grid{
	display:grid;
	grid-template-columns:33%;
	grid-template-rows:33%;
}
.child{
	background:#ff5346;
	width:100%;
	height:39.px;
	text-align:center;
	line-height:39px;
}
.child em{
	height:100%;
	vertical-align:middle;
}
.hasChoose{
	background:#ccc;
}
.hasChoosedClou{
	background:#ddd;
}
.key-board{
	width:126px;
	margin: 0 auto;
	overflow:hidden;
}
.num-key{
	width:30px;
	border:solid 1px #000;
	border-radius:50%;
	float:left;
	height:30px;
	margin-right:10px;
	text-align:center;
	line-height:30px;
	margin-bottom:10px;

}
.num-key:active{
	background:#ff5555;
}